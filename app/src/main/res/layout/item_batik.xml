<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#DE83ED"
    android:id="@+id/hasil_batik">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode Batik :"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_batik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Batik :"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_asal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asal Batik :"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_makna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Makna Batik :"
                android:textColor="@color/white"
                android:textSize="15sp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/hapus"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_delete"
            android:layout_marginRight="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>